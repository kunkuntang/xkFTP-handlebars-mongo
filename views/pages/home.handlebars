<div class="container">
    <div class="row">
        {{#each movies}}
        {{item}}
            <div class="col-md-2">
                <div class="thumbnail">
                    <a href="/movie/{{id}}">
                        <img src="{{item.poster}}" alt="{{title}}">
                        <div class="caption">
                            <h3>{{title}}</h3>
                            <p><a href="/movie/{{item._id}}" role="button" class="btn btn-primary">观看预告片</a></p>
                        </div>
                    </a>
                </div>
            </div>
        {{/each}}
    </div>
</div>